<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DownListViewTitleHeight"
    android:background="@color/loginLoginColors"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/downthress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/downListViewTitleTextLeft"
        android:layout_marginTop="@dimen/downListViewTitleTextTop"
        android:textColor="@color/createBlack"
        android:textSize="@dimen/downListViewTitleTextSize"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/downListViewTitleImageHeight"
        android:layout_marginLeft="@dimen/downListViewTitleImageLeft"
        android:layout_marginRight="@dimen/downListViewTitleImageRight"
        android:background="@mipmap/title_line" />

</LinearLayout>