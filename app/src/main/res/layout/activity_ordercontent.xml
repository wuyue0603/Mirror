<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBac"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/loginTitleLeft"
            android:layout_marginTop="@dimen/loginTitleTop"
            android:text="@string/orderContentTitle"
            android:textColor="@color/loginText"
            android:textSize="@dimen/loginTitleSize" />

        <ImageView
            android:id="@+id/login_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/loginCloseRight"
            android:layout_marginTop="@dimen/loginCloseTop"
            android:src="@mipmap/close" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/loginLineTop"
        android:src="@mipmap/create_account_title_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/orderContentBacHeight"
        android:layout_marginLeft="@dimen/loginTitleLeft"
        android:layout_marginRight="@dimen/loginCloseRight"
        android:layout_marginTop="@dimen/homepageContentTitleLineTop"
        android:background="@color/loginLoginColors">


        <TextView
            android:id="@+id/receiver_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/orderContentReceiverInfoLeft"
            android:layout_marginTop="@dimen/orderContentReceiverInfoTop"
            android:text="@string/orderContentWriteReceiverInfo"
            android:textColor="@color/loginText"
            android:textSize="@dimen/loginLoginSize" />

        <TextView
            android:id="@+id/order_content_name"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/orderContentReceiverInfoLeft"
            android:layout_marginTop="@dimen/orderContentReceiverInfoTop" />
        <TextView
            android:id="@+id/order_content_address"
            android:layout_below="@+id/order_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/orderContentReceiverInfoLeft"
            android:layout_marginTop="@dimen/orderContentReceiverInfoTop"/>

        <TextView
            android:id="@+id/order_content_tel"
            android:textStyle="bold"
            android:layout_below="@id/order_content_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/orderContentReceiverInfoLeft"
            android:layout_marginTop="@dimen/orderContentReceiverInfoTop"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/orderContentViewHeight"
            android:layout_below="@id/receiver_info"
            android:layout_marginTop="@dimen/orderContentViewTop"
            android:background="@color/orderContentView" />

        <TextView
            android:id="@+id/write_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/loginCloseTop"
            android:text="@string/orderContentWriteAddress"
            android:textColor="@color/loginText" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/orderContentSecondBacHeight"
            android:layout_marginLeft="@dimen/loginTitleLeft"
            android:layout_marginRight="@dimen/loginCloseRight"
            android:layout_marginTop="@dimen/homepageContentFrameTop"
            android:background="@color/loginLoginColors" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/things_iv"
            android:layout_width="@dimen/homepageContentImageWidth"
            android:layout_height="60dp"
            android:layout_centerVertical="true"

            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/things_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/orderContentThingsNameLeft"
            android:layout_marginTop="@dimen/orderContentThingsNameTop"
            android:layout_toRightOf="@id/things_iv"
            android:text="@string/orderContentThingsName"
            android:textColor="@color/loginText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/things_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/things_brand"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/loginLineTop"
            android:layout_toRightOf="@id/things_iv"
            android:text="@string/orderContentContent"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/things_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/things_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/loginLineTop"
            android:layout_toRightOf="@id/things_iv"
            android:text="@string/orderContentPrice"
            android:textColor="@color/orderContentPrice" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/createReLe"
        android:layout_marginRight="@dimen/createReRig"
        android:layout_marginTop="@dimen/createReTo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/create_number_press" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/orderContentSureOrder"
            android:textColor="@color/createWhite"
            android:textSize="@dimen/accountLoginTv" />

    </RelativeLayout>

</LinearLayout>

