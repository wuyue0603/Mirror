<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="680dp"
    android:background="@color/downListViewHeadBac">

    <ImageView
        android:id="@+id/down_listView_share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/share" />

    <LinearLayout
        android:layout_width="@dimen/downListViewHeadLinearLayoutWidth"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/downListViewHeadLinearLayoutTop"
        android:background="@mipmap/commodity_share_out_frame"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/downListViewHeadLinearLayoutMar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_head_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:text="@string/downListViewHeadText"
                android:textColor="@android:color/white"
                android:textSize="@dimen/downListViewHeadTextSize" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/downListViewHeadImageViewHeight"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/downListViewHeadImageViewTop"
                android:background="@mipmap/under_title_line" />

            <TextView
                android:id="@+id/detail_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/downListViewHeadTextTop"
                android:text="@string/downListViewHeadTextView"
                android:textColor="@android:color/white"
                android:textSize="@dimen/downListViewHeadTextViewSize" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/downListViewHeadImageViewHeight"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/downListViewDownHeadImageViewTop"
                android:background="@mipmap/under_title_line" />

            <TextView
                android:id="@+id/detail_head_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/downListViewHeadTextViewTop"
                android:text="@string/downListViewHeadTextViewView"
                android:textColor="@android:color/white"
                android:textSize="@dimen/downListViewHeadTextViewViewSize" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/downListViewHeadImageViewViewTop"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_head_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/downListViewHeadTextViewSizeSize" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/BottomListViewHeadTextViewTop"
        android:text="@string/BottomListViewHeadTextView"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/BottomListViewHeadImageTop"
        android:background="@mipmap/drop_down_arrow" />

</FrameLayout>