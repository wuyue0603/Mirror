<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="@dimen/all_type_all_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_type_all_left"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/all_type_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_type_image_height"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_type_content_height"
            android:layout_marginLeft="@dimen/all_type_content_left"
            android:layout_marginRight="@dimen/all_type_content_right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_type_price_top"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEE CONCEPT"
                        android:textSize="@dimen/all_type_textsize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/home_price_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/all_type_price_text"
                        android:textSize="@dimen/all_type_price_textsize"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/home_price_Tv"
                        android:src="@mipmap/mymoney" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_type_france_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="法国巴黎"
                    android:textSize="@dimen/all_type_france_textsize" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_type_image_top"
                android:src="@mipmap/blackline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/all_type_fina_text"
                    android:text="草莓红色圆框阅读镜"
                    android:textSize="@dimen/all_type_final_textsize" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>