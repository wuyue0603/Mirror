<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/show_menu_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pop_item_text_left"
            android:layout_marginTop="@dimen/pop_item_text_top"
            android:textColor="@android:color/white"
            android:textSize="@dimen/pop_item_textSize" />

        <ImageView
            android:id="@+id/show_menu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pop_item_image_left"
            android:layout_marginTop="@dimen/pop_item_image_top"
            android:src="@mipmap/main_second_line" />

    </LinearLayout>

</LinearLayout>